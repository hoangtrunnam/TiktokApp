<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TiktokClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TiktokClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B3B3B3</item>
        <item name="colorPrimaryVariant">#B3B3B3</item>
        <item name="colorOnPrimary">#B3B3B3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#B3B3B3</item>
        <item name="colorSecondaryVariant">#B3B3B3</item>
        <item name="colorOnSecondary">#B3B3B3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#B3B3B3</item>
    </style>
    
    <style name="DialogAni">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>