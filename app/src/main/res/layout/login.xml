<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include"
        layout="@layout/custom_actionbar" />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:text=""
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:id="@+id/emailorusername"
        />
    <EditText
        android:hint="Số điện thoại"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/login_email"
        app:layout_constraintTop_toBottomOf="@+id/emailorusername"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <EditText
        android:hint="Mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/login_password"
        app:layout_constraintTop_toBottomOf="@+id/login_email"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu ?"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:id="@+id/forgot"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/forgot"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Đăng nhập"
        android:backgroundTint="@color/red_tiktok"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn chưa có tài khoản ?"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:id="@+id/donthaveanaccount"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@id/donthaveanaccount"
        android:layout_marginLeft="10dp"
        android:id="@+id/link_signup"
        android:textColor="@color/red_tiktok"
        android:textStyle="bold"
        android:onClick="onClick"
        android:clickable="true"
        />


</androidx.constraintlayout.widget.ConstraintLayout>