<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:layout_gravity="center">
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/profile_btn_clear"
        android:layout_gravity="right"
        android:background="@color/transparent"
        android:src="@drawable/icon_close"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_avatar"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\@username"
        android:layout_marginTop="160dp"
        android:id="@+id/user_username"
        android:gravity="center"
        android:textStyle="bold"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp"
            android:text="0"
            android:id="@+id/user_count_follower"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toLeftOf="@id/user_follower"
            android:layout_marginLeft="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="follower"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp"
            android:id="@+id/user_follower"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/user_count_follower"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/user_btn_follow"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/red_tiktok"
        style="@style/Base.CardView"
        android:text="Follow"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="10dp"/>

</androidx.cardview.widget.CardView>

